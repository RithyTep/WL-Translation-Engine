{
  "name": "kirby-i18n",
  "displayName": "WL Translation Engine",
  "description": "IntelliSense autocomplete, hover preview, and translation management for Vue i18n projects with dynamic language support",
  "version": "1.0.9",
  "publisher": "rithytep",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/rithytep/kirby-i18n"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "i18n",
    "vue",
    "translation",
    "localization",
    "internationalization"
  ],
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "kirby-i18n.translationStatus",
          "name": "Translation Status"
        }
      ]
    },
    "commands": [
      {
        "command": "kirby-i18n.addTranslation",
        "title": "WL: Add New Translation"
      },
      {
        "command": "kirby-i18n.searchKey",
        "title": "WL: Search Translation Key"
      },
      {
        "command": "kirby-i18n.refresh",
        "title": "WL: Refresh Translation Cache"
      },
      {
        "command": "kirby-i18n.refreshTranslationStatus",
        "title": "WL: Refresh Translation Status",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kirby-i18n.refreshTranslationStatus",
          "when": "view == kirby-i18n.translationStatus",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "kirby-i18n.addTranslation",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "kirby-i18n.searchKey",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k"
      }
    ],
    "configuration": {
      "title": "WL Translation Engine",
      "properties": {
        "kirby-i18n.langPath": {
          "type": "string",
          "default": "",
          "description": "Path to language JSON files directory relative to workspace (e.g., src/lang, locales). Auto-detects if empty."
        },
        "kirby-i18n.sourceLanguage": {
          "type": "string",
          "default": "en",
          "description": "Source language code used as base for translations (e.g., en, zh_CN)"
        },
        "kirby-i18n.customLanguages": {
          "type": "object",
          "default": {},
          "description": "Custom language definitions for unknown language codes",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the language"
              },
              "flag": {
                "type": "string",
                "description": "Flag emoji for the language"
              },
              "apiCode": {
                "type": "string",
                "description": "MyMemory API language code (e.g., fr-FR, de-DE)"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
